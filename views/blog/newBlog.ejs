                            </div>
                            <div class="form-group">
                                <label for="comImage">Blog Commercial Image</label>
                                <input type="text" class="form-control" id="comImage" placeholder="Blog Commercial Image">
                            </div>
                            <textarea name="editor" id="myTextArea"></textarea>
