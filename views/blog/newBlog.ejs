                        <form>
                            <div class="form-group">
                            <label for="blogTitle">Blog Title</label>
                            <input type="text" class="form-control" id="blogTitle" placeholder="Blog Title">
                            </div>
                            <div class="form-group">
                                <label for="comSentence">Blog Commercial Sentence</label>
